package day6;

class Book{
	String title;
	int price;
	Book(){}
	Book(String title, int price){
		this.title = title;
		this.price = price;
	}
	public void setTitle(String title) {
		this.title = title;
	}
	public void setPrice(int price) {
		this.price = price;
	}
}

